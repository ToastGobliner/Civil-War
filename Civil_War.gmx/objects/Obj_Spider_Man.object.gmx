        if initStep == true
        {
            initStep = false;
            isStep = true;
            image_xscale = 1;
        }
        else if isStep == false
        {
            vel = walkSpeed;
            sprite_index = spriteWalk;
            image_speed = 0.15;
            image_xscale = 1;
        }
    }
    else if keyboard_check(vk_left) &amp;&amp; !place_meeting(x+vel-1, y, objSolid)
