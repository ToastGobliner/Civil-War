        if initStep == true
        {
            initStep = false;
            isStep = true;
            image_xscale = -1;
        }
        else if isStep == false
        {
            vel = -walkSpeed;
            sprite_index = spriteWalk;
            image_speed = 0.15;
            image_xscale = -1;
        }
    }
    else if isStep == false
    {
        stepTimer = 0;
        vel = 0;
        sprite_index = spriteStand;
        initStep = true;
    }
    
    
    //Sidestepping
    if isStep == true
    {
        vel = image_xscale * stepSpeed;
        sprite_index = spriteStep;
        
        stepTimer += 1;
        if stepTimer &gt;= stepFrames
        {
            stepTimer = 0;
            isStep = false;
        }
    }
}
else
{
    sprite_index = spriteJump;
    initStep = false;
    stepTimer = 0;
